<%= simple_form_for(@book,html:{class:'form-signin'}) do |f| %>
  <%= f.error_notification %>
    <%= f.input :name, required:true, autofocus:true, label:false, placeholder:'Event Name', input_html:{class:'form-control'} %>
    <%= f.input :author, required:true, label:false, placeholder:'Location', input_html:{class:'form-control'} %>
    <%= f.input :description, required:true, label:false, placeholder:'Description', input_html:{class:'form-control',rows:5} %>
    <%= f.input :image %>
    <%= f.button :submit, class:'btn btn-primary' %>
<% end %>


